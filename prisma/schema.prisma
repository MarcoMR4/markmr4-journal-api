generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PostStatus {
  draft
  published
  archived
}

model Post {
  id        String     @id @default(uuid())
  title     String
  content   String
  status    PostStatus @default(draft)
  slug      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
